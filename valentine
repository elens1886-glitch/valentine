    <button class="no" id="noBtn" onmouseover="moveNo()">No ðŸ™ˆ</button>

    <div id="message"></div>

    <audio id="music" controls>
      <source src="https://www.bensound.com/bensound-music/bensound-love.mp3" type="audio/mpeg">
